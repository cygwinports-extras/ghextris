  /usr/share/doc/ghextris-0.9.0/README
  /usr/share/games/ghextris/ghextris-icon.xpm
  /usr/share/games/ghextris/ghextris.glade
  /usr/share/games/ghextris/ghextris.png
  /usr/share/games/ghextris/ghextris.py
  /usr/share/locale/fi/LC_MESSAGES/ghextris.mo
  /usr/share/man/man6/ghextris.6.gz

